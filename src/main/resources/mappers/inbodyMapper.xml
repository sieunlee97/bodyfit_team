<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bodyfit.bodyfit.mapper.InbodyMapper">
		<sql id = "inbodyColumns">
			  inbody_date
			, email
			, gender
			, age
			, height
			, weight
			, current_fat_rate
			, target_fat_rate
			, diet_type
			, period
			, exercise
		</sql>
			
	<insert id="insertInbody" parameterType="InbodyDTO">
		insert into tbl_inbody (
			<include refid="inbodyColumns" />
		) values (
			  now()
			, #{email}
			, #{gender}
			, #{age}
			, #{height}
			, #{weight}
			, #{currentFatRate}
			, #{targetFatRate}
			, #{dietType}
			, #{period}
			, #{exercise}
		)
	</insert>
	
	<select id="selectInbodyList" resultType="InbodyDTO">
		SELECT 
				  inbody_date
				, current_fat_rate 
		FROM 
				tbl_inbody
		WHERE 
				email=#{email}

	</select>
	
	
	<select id="selectInbodyDetail" parameterType="string" resultType="InbodyDTO">
	
		SELECT 
				<include refid="inbodyColumns" />
		FROM 
				tbl_inbody
		WHERE 
				email = #{email}
		ORDER BY 
				inbody_date desc 
		limit 
				1
	</select>

</mapper>